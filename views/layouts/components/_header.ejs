<header class="bg-white/80 backdrop-blur-sm shadow-sm sticky top-0 z-10">
  <div class="container mx-auto px-4 py-3 flex items-center justify-between">
    <div class="flex items-center space-x-2">
      <button
        id="menuToggle"
        class="md:hidden text-sky-700 p-2 rounded-lg hover:bg-gray-100"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          />
        </svg>
      </button>
      <h2 class="text-xl font-semibold text-sky-800"><%= title %></h2>
    </div>
    <div class="flex items-center space-x-4">
      <div class="relative">
        <div
          class="w-8 h-8 bg-sky-100 rounded-full flex items-center justify-center"
        >
          <span class="text-sky-700 font-medium">AD</span>
        </div>
        <div
          class="absolute bottom-0 right-0 w-2.5 h-2.5 bg-green-500 rounded-full border-2 border-white"
        ></div>
      </div>
    </div>
  </div>
</header>
