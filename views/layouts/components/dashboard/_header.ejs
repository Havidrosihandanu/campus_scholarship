<header class="bg-white/70 backdrop-blur-md shadow-md sticky top-0 z-20">
  <div class="container mx-auto px-4 py-4 flex items-center justify-between">
    <!-- Left Side: Title & Toggle -->
    <div class="flex items-center gap-3">
      <!-- Mobile Toggle Button -->
      <button
              id="menuToggle"
              class="md:hidden p-2 rounded-lg text-sky-700 hover:bg-sky-100 transition"
              aria-label="Toggle Menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"
          />
        </svg>
      </button>

      <!-- Page Title -->
      <h1 class="text-xl md:text-2xl font-semibold text-sky-800 tracking-tight">
        <%= title %>
      </h1>
    </div>

    <!-- Right Side: User Badge -->
    <div class="relative">
      <div class="w-9 h-9 bg-sky-100 rounded-full flex items-center justify-center shadow-inner">
        <span class="text-sky-700 font-semibold text-sm">AD</span>
      </div>
      <div class="absolute bottom-0 right-0 w-2.5 h-2.5 bg-green-500 rounded-full border-2 border-white shadow"></div>
    </div>
  </div>
</header>
