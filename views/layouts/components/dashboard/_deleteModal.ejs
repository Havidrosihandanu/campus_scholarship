<!-- views/layouts/components/_deleteModal.ejs -->
<div id="deleteModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black/50 backdrop-blur-sm hidden">
    <div id="deleteModalContent" class="bg-white rounded-3xl shadow-2xl w-full max-w-md p-8 relative animate-fade-in-down">

        <!-- Tombol Close -->
        <button
                type="button"
                onclick="closeModal('deleteModal')"
                class="absolute top-4 right-4 text-gray-400 hover:text-red-500 transition text-xl"
                title="Tutup">
            &times;
        </button>

        <!-- Judul -->
        <h2 class="text-2xl font-bold text-gray-800 mb-3">Konfirmasi Penghapusan</h2>

        <!-- Deskripsi -->
        <p class="text-gray-600 mb-6 leading-relaxed">
            Apakah kamu yakin ingin menghapus data ini? Tindakan ini <span class="font-semibold text-red-600">tidak dapat dibatalkan</span>.
        </p>

        <!-- Form -->
        <form method="POST" action="/dashboard/registrant/:id?_method=DELETE">
            <input type="hidden" id="deleteId" name="id" />

            <div class="flex justify-end gap-3 mt-4">
                <button
                        type="button"
                        onclick="closeModal('deleteModal')"
                        class="px-5 py-2 rounded-full bg-gray-100 text-gray-700 hover:bg-gray-200 transition font-medium">
                    Batal
                </button>
                <button
                        type="submit"
                        class="px-5 py-2 rounded-full bg-red-600 text-white hover:bg-red-700 transition font-semibold shadow">
                    Hapus
                </button>
            </div>
        </form>
    </div>
</div>