<div id="editScholarshipModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black/50 backdrop-blur-sm hidden">
    <div id="editScholarshipModalContent" class="w-full h-full flex items-center justify-center p-4 animate-fade-in-down">
        <div class="bg-white w-full max-w-3xl max-h-[95vh] overflow-y-auto p-8 rounded-2xl shadow-2xl relative">

            <!-- Header -->
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-semibold text-gray-800">Edit Beasiswa</h2>
                <button type="button" onclick="closeModal('editScholarshipModal')" class="text-3xl text-gray-400 hover:text-red-500 transition leading-none">&times;</button>
            </div>

            <!-- Form -->
            <form id="editScholarshipForm" method="POST" action="/dashboard/scholarship/:id?_method=PUT" class="space-y-6">
                <input type="hidden" name="id" id="scholarship_id_edit" />

                <div class="grid grid-cols-1 md:grid-cols-2 gap-5">

                    <!-- Nama -->
                    <div class="md:col-span-2">
                        <label for="name_edit" class="block text-sm font-medium text-gray-700 mb-1">Nama Beasiswa</label>
                        <input type="text" name="name" id="name_edit" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" required />
                    </div>

                    <!-- Deskripsi -->
                    <div class="md:col-span-2">
                        <label for="description_edit" class="block text-sm font-medium text-gray-700 mb-1">Deskripsi</label>
                        <textarea name="description" id="description_edit" rows="4" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none resize-none" required></textarea>
                    </div>

                    <!-- Tipe -->
                    <div>
                        <label for="type_edit" class="block text-sm font-medium text-gray-700 mb-1">Tipe</label>
                        <input type="text" name="type" id="type_edit" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                    </div>

                    <!-- Nominal -->
                    <div>
                        <label for="nominal_edit" class="block text-sm font-medium text-gray-700 mb-1">Nominal</label>
                        <input type="number" name="nominal" id="nominal_edit" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                    </div>

                    <!-- Deadline -->
                    <div>
                        <label for="deadline_edit" class="block text-sm font-medium text-gray-700 mb-1">Tenggat Waktu</label>
                        <input type="date" name="deadline" id="deadline_edit" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                    </div>

                    <!-- Durasi -->
                    <div>
                        <label for="duration_edit" class="block text-sm font-medium text-gray-700 mb-1">Durasi</label>
                        <input type="text" name="duration" id="duration_edit" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                    </div>

                    <!-- Syarat Umum -->
                    <div>
                        <label for="general_requirement_edit" class="block text-sm font-medium text-gray-700 mb-1">Syarat Umum</label>
                        <textarea name="general_requirement" id="general_requirement_edit" rows="3" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none resize-none"></textarea>
                    </div>

                    <!-- Syarat Khusus -->
                    <div>
                        <label for="special_requirement_edit" class="block text-sm font-medium text-gray-700 mb-1">Syarat Khusus</label>
                        <textarea name="special_requirement" id="special_requirement_edit" rows="3" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none resize-none"></textarea>
                    </div>

                    <!-- Jenjang -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Jenjang</label>
                        <div class="flex flex-wrap gap-3 text-sm text-gray-700">
                            <% ['D3', 'D4', 'S1', 'S2', 'S3'].forEach(degree => { %>
                                <label class="inline-flex items-center gap-2">
                                    <input type="checkbox" class="checkbox-degree" value="<%= degree %>" />
                                    <%= degree %>
                                </label>
                            <% }) %>
                        </div>
                        <input type="hidden" name="degree_requirement" id="degree_requirement_edit" />
                    </div>

                    <!-- Status -->
                    <div>
                        <label for="status_edit" class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                        <select name="status" id="status_edit" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none bg-white">
                            <option value="">Pilih status</option>
                            <option value="Aktif">Aktif</option>
                            <option value="Tidak Aktif">Tidak Aktif</option>
                        </select>
                    </div>
                </div>

                <!-- Tombol Aksi -->
                <div class="flex justify-end gap-3 pt-6 border-t mt-6">
                    <button type="button" onclick="closeModal('editScholarshipModal')" class="px-5 py-2 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 transition">Batal</button>
                    <button type="submit" class="px-5 py-2 rounded-lg bg-gradient-to-r from-blue-600 to-sky-500 text-white hover:brightness-110 transition">Simpan</button>
                </div>
            </form>
        </div>
    </div>
</div>
