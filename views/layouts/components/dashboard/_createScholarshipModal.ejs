<!-- views/layouts/components/_createScholarshipModal.ejs -->
<div id="createScholarshipModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black/50 backdrop-blur-sm hidden">
    <div id="createScholarshipModalContent" class="w-full h-full flex items-center justify-center p-4 animate-fade-in-down">
        <div class="bg-white w-full max-w-3xl max-h-[95vh] overflow-y-auto p-8 rounded-2xl shadow-2xl relative">

            <!-- Header -->
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-semibold text-gray-800">Tambah Beasiswa</h2>
                <button type="button" onclick="closeModal('createScholarshipModal')" class="text-3xl text-gray-400 hover:text-red-500 transition leading-none">&times;</button>
            </div>

            <!-- Form -->
            <form id="createScholarshipForm" method="POST" action="/dashboard/scholarship" enctype="multipart/form-data" class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-5">

                    <!-- Nama -->
                    <div class="md:col-span-2">
                        <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Nama Beasiswa</label>
                        <input type="text" id="name" name="name" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" required>
                    </div>

                    <!-- Deskripsi -->
                    <div class="md:col-span-2">
                        <label for="description" class="block text-sm font-medium text-gray-700 mb-1">Deskripsi</label>
                        <textarea id="description" name="description" rows="4" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none resize-none" required></textarea>
                    </div>

                    <!-- Tipe -->
                    <div>
                        <label for="type" class="block text-sm font-medium text-gray-700 mb-1">Tipe</label>
                        <input type="text" id="type" name="type" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
                    </div>

                    <!-- Nominal -->
                    <div>
                        <label for="nominal" class="block text-sm font-medium text-gray-700 mb-1">Nominal</label>
                        <input type="number" id="nominal" name="nominal" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
                    </div>

                    <!-- Deadline -->
                    <div>
                        <label for="deadline" class="block text-sm font-medium text-gray-700 mb-1">Tenggat Waktu</label>
                        <input type="date" id="deadline" name="deadline" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
                    </div>

                    <!-- Durasi -->
                    <div>
                        <label for="duration" class="block text-sm font-medium text-gray-700 mb-1">Durasi</label>
                        <input type="text" id="duration" name="duration" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
                    </div>

                    <!-- Syarat Umum -->
                    <div>
                        <label for="general_requirement" class="block text-sm font-medium text-gray-700 mb-1">Syarat Umum</label>
                        <textarea id="general_requirement" name="general_requirement" rows="3" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none resize-none"></textarea>
                    </div>

                    <!-- Syarat Khusus -->
                    <div>
                        <label for="special_requirement" class="block text-sm font-medium text-gray-700 mb-1">Syarat Khusus</label>
                        <textarea id="special_requirement" name="special_requirement" rows="3" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none resize-none"></textarea>
                    </div>

                    <!-- Jenjang -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Jenjang</label>
                        <div class="flex flex-wrap gap-3 text-sm text-gray-700">
                            <% ['D3', 'D4', 'S1', 'S2', 'S3'].forEach(degree => { %>
                                <label class="inline-flex items-center gap-2">
                                    <input type="checkbox" class="checkbox-degree-create" value="<%= degree %>" />
                                    <%= degree %>
                                </label>
                            <% }) %>
                        </div>
                        <input type="hidden" name="degree_requirement" id="degree_requirement_create" />
                    </div>

                    <!-- Status -->
                    <div>
                        <label for="status" class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                        <select id="status" name="status" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none bg-white">
                            <option value="">Pilih status</option>
                            <option value="Aktif">Aktif</option>
                            <option value="Tidak Aktif">Tidak Aktif</option>
                        </select>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex justify-end gap-3 pt-6 border-t mt-6">
                    <button type="button" onclick="closeModal('createScholarshipModal')" class="px-5 py-2 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 transition">Batal</button>
                    <button type="submit" class="px-5 py-2 rounded-lg bg-gradient-to-r from-blue-600 to-sky-500 text-white hover:brightness-110 transition">Simpan</button>
                </div>
            </form>
        </div>
    </div>
</div>
