<!-- views/layouts/components/_editAnnouncementModal.ejs -->
<div id="editAnnouncementModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black/50 backdrop-blur-sm hidden">
    <div id="editAnnouncementModalContent" class="w-full h-full flex items-center justify-center p-4 animate-fade-in-down">
        <div class="bg-white w-full max-w-3xl max-h-[95vh] overflow-y-auto p-8 rounded-2xl shadow-2xl relative">

            <!-- Header -->
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-semibold text-gray-800">Edit Pengumuman</h2>
                <button type="button" onclick="closeModal('editAnnouncementModal')" class="text-3xl text-gray-400 hover:text-red-500 transition leading-none">&times;</button>
            </div>

            <!-- Form -->
            <form id="editAnnouncementForm" method="POST" enctype="multipart/form-data" class="space-y-6">
                <input type="hidden" name="_method" value="PUT" />
                <input type="hidden" id="editAnnouncementId" name="id" />

                <!-- Judul -->
                <div>
                    <label for="title" class="block text-sm font-medium text-gray-700 mb-1">Judul</label>
                    <input type="text" id="title" name="title" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required />
                </div>

                <!-- Deskripsi -->
                <div>
                    <label for="description" class="block text-sm font-medium text-gray-700 mb-1">Deskripsi</label>
                    <textarea id="description" name="description" rows="2" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none" required></textarea>
                </div>

                <!-- Isi Pengumuman -->
                <div>
                    <label for="content" class="block text-sm font-medium text-gray-700 mb-1">Isi Pengumuman</label>
                    <textarea id="content" name="content" rows="6" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none"></textarea>
                </div>

                <!-- File -->
                <div>
                    <label for="file" class="block text-sm font-medium text-gray-700 mb-1">File Pengumuman</label>
                    <input type="file" id="file" name="file" class="w-full border rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white" />
                    <p id="currentFile" class="text-sm text-gray-500 mt-1"></p>
                </div>

                <!-- Tombol Aksi -->
                <div class="flex justify-end gap-3 pt-6 border-t mt-6">
                    <button type="button" onclick="closeModal('editAnnouncementModal')" class="px-5 py-2 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 transition">Batal</button>
                    <button type="submit" class="px-5 py-2 rounded-lg bg-gradient-to-r from-blue-600 to-sky-500 text-white hover:brightness-110 transition">Simpan Perubahan</button>
                </div>
            </form>

        </div>
    </div>
</div>