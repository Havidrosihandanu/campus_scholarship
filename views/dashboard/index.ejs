<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Beasiswa Sigma Dashboard</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <!--    <link href="/css/output.css" rel="stylesheet">-->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        .stats-card {
            transition: all 0.3s ease;
        }
        .stats-card:hover {
            transform: translateY(-5px);
        }
        .chart-container {
            height: 300px;
        }
        .outline-gray {
            -webkit-text-stroke: 0.09em gray;
            paint-order: stroke fill;
        }
    </style>
</head>
<body class="bg-gradient-to-b bg-sky-600/40 min-h-screen">
<div class="flex min-h-screen">
    <!-- Sidebar -->
    <div class="w-60 bg-gradient-to-b from-sky-800 to-sky-700 fixed h-full transform -translate-x-full md:translate-x-0 transition-transform duration-300 ease-in-out z-20">
        <div class="p-5 border-b border-b-white bg-[url('/images/sigma_img.png')] bg-no-repeat bg-cover shadow-lg bg-opacity-10 relative">
            <h1 class="text-white text-xl font-bold">Beasiswa Sigma</h1>
        </div>

        <nav class="pt-4">
            <a href="#" class="group flex items-center px-5 py-3 bg-white/50 cursor-pointer rounded-2xl">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M2 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1H3a1 1 0 01-1-1V4z" />
                    <path d="M8 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1H9a1 1 0 01-1-1V4z" />
                    <path d="M15 3a1 1 0 00-1 1v12a1 1 0 001 1h2a1 1 0 001-1V4a1 1 0 00-1-1h-2z" />
                </svg>
                    <span class="ml-3 text-white text-xl font-medium text-shadow-lg outline-gray">Dashboard</span>
            </a>

            <!-- Parent Menu Item -->
            <div class="mt-1">
                <button id="beasiswaToggle" class="group w-full flex items-center px-5 py-3 hover:bg-sky-700 transition-colors cursor-pointer focus:outline-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z" />
                    </svg>
                    <span class="ml-3 text-white text-xl font-medium">Beasiswa</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="ml-auto h-4 w-4 text-white transition-transform duration-200" id="chevronIcon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                </button>

                <!-- Dropdown Items -->
                <div id="beasiswaDropdown" class="ml-10 mt-1 hidden flex-col space-y-1">
                    <a href="#" class="block text-white hover:bg-sky-700 px-4 py-2 rounded-md text-sm">D3</a>
                    <a href="#" class="block text-white hover:bg-sky-700 px-4 py-2 rounded-md text-sm">S1</a>
                    <a href="#" class="block text-white hover:bg-sky-700 px-4 py-2 rounded-md text-sm">S2</a>
                </div>
            </div>


            <a href="#" class="group flex items-center px-5 py-3 hover:bg-sky-700 transition-colors cursor-pointer mt-1">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
                </svg>
                <span class="ml-3 text-white text-xl font-medium text-shadow-lg outline-gray">Pendaftar</span>
            </a>

            <a href="#" class="group flex items-center px-5 py-3 hover:bg-sky-700 transition-colors cursor-pointer mt-1">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                </svg>
                <span class="ml-3 text-white text-xl font-medium text-shadow-lg outline-gray">Pengaturan</span>
            </a>

        </nav>

        <div class="absolute bottom-0 w-full p-5 border-t-2 border-white/40 my-2">
            <a href="#" class="flex items-center text-white hover:bg-sky-800 rounded-lg p-2 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M3 3a1 1 0 00-1 1v12a1 1 0 001 1h12a1 1 0 001-1V7.414a1 1 0 00-.293-.707L11.414 2.414A1 1 0 0010.707 2H4a1 1 0 00-1 1zm9 2.414L14.586 8H12V5.414zM5 4h4v4h4v8H5V4z" clip-rule="evenodd" />
                </svg>
                <span class="ml-3 text-white text-xl font-medium text-shadow-xs">Logout</span>
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="flex-1 md:ml-60">
        <!-- Top Navigation -->
        <div class=" backdrop-blur-sm shadow-sm p-4 sticky top-0 z-10">
            <div class="container mx-auto flex justify-between items-center">
                <div class="flex items-center space-x-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-900" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M2 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1H3a1 1 0 01-1-1V4z" />
                        <path d="M8 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1H9a1 1 0 01-1-1V4z" />
                        <path d="M15 3a1 1 0 00-1 1v12a1 1 0 001 1h2a1 1 0 001-1V4a1 1 0 00-1-1h-2z" />
                    </svg>
                    <h2 class="text-blue-900 text-xl font-medium">Dashboard</h2>
                </div>
                <div class="relative">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-900 p-1 rounded-full border-2 border-blue-900" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                    </svg>
                    <div class="absolute top-0 right-0 w-3 h-3 bg-green-500 rounded-full border-2 border-white"></div>
                </div>
            </div>
        </div>

        <!-- Dashboard Content -->
        <div class="container mx-auto px-4 py-6">
            <!-- Stats Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Total Pendaftar -->
                <div class="stats-card bg-[#2D8BC0] rounded-2xl shadow-lg p-4 w-full text-white flex flex-col justify-between min-h-[192px]">
                    <!-- Top Row -->
                    <div class="flex justify-between items-start">
                        <!-- Icon -->
                        <div class="p-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" viewBox="0 0 20 20" fill="currentColor">
                                <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
                            </svg>
                        </div>
                        <!-- Title -->
                        <h3 class="text-white text-2xl font-semibold text-shadow-lg outline-gray">Total Pendaftar</h3>
                    </div>

                    <!-- Main Number -->
                    <div class="flex justify-end">
                        <p class="text-5xl font-bold text-shadow-lg outline-gray">500</p>
                    </div>

                    <!-- Separator -->
                    <div class="border-t-2 border-white/40 my-2 w-full"></div>

                    <!-- Bottom Label -->
                    <div class="flex justify-end pr-2">
                        <p class="text-white text-md font-semibold text-shadow-lg outline-gray">Orang</p>
                    </div>
                </div>


                <!-- Total Beasiswa -->
                <div class="stats-card bg-[#2D8BC0] rounded-2xl shadow-lg p-4 w-full text-white flex flex-col justify-between min-h-[192px]">
                    <!-- Top Row -->
                    <div class="flex justify-between items-start">
                        <!-- Icon -->
                        <div class="p-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" viewBox="0 0 20 20" fill="currentColor">
                                <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z" />
                            </svg>
                        </div>
                        <!-- Title -->
                        <h3 class="text-white text-2xl font-semibold text-shadow-lg outline-gray">Total Beasiswa</h3>
                    </div>

                    <!-- Main Number -->
                    <div class="flex justify-end">
                        <p class="text-5xl font-bold text-shadow-lg outline-gray">1200</p>
                    </div>

                    <!-- Separator -->
                    <div class="border-t-2 border-white/40 my-2 w-full"></div>

                    <!-- Bottom Label -->
                    <div class="flex justify-end pr-2">
                        <p class="text-white text-md font-semibold text-shadow-lg outline-gray">Beasiswa</p>
                    </div>
                </div>

                <!-- Rata-rata Kuota -->
                <div class="stats-card bg-[#2D8BC0] rounded-2xl shadow-lg p-4 w-full text-white flex flex-col justify-between min-h-[192px]">
                    <!-- Top Row -->
                    <div class="flex justify-between items-start">
                        <!-- Icon -->
                        <div class="p-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" viewBox="0 0 20 20" fill="currentColor">
                                <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
                            </svg>
                        </div>
                        <!-- Title -->
                        <h3 class="text-white text-2xl font-semibold text-shadow-lg outline-gray">Rata-rata Kuota</h3>
                    </div>

                    <!-- Main Number -->
                    <div class="flex justify-end">
                        <p class="text-5xl font-bold text-shadow-lg outline-gray">10</p>
                    </div>

                    <!-- Separator -->
                    <div class="border-t-2 border-white/40 my-2 w-full"></div>

                    <!-- Bottom Label -->
                    <div class="flex justify-end pr-2">
                        <p class="text-white text-md font-semibold text-shadow-lg outline-gray">Orang</p>
                    </div>
                </div>
            </div>

            <!-- Chart Section -->
            <div class="mt-8 bg-blue-500 rounded-xl shadow-lg p-6">
                <h3 class="text-white text-xl font-medium mb-4">Statistik Aplikasi Beasiswa</h3>
                <div class="chart-container">
                    <canvas id="scholarshipChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Mobile Menu Toggle -->
<button class="fixed z-50 bottom-4 left-4 md:hidden bg-blue-700 text-white p-3 rounded-full shadow-lg" id="menuToggle">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
    </svg>
</button>

<script>
    // Beasiswa toggle
    const beasiswaToggle = document.getElementById('beasiswaToggle');
    const beasiswaDropdown = document.getElementById('beasiswaDropdown');
    const chevronIcon = document.getElementById('chevronIcon');

    beasiswaToggle.addEventListener('click', () => {
        beasiswaDropdown.classList.toggle('hidden');
        chevronIcon.classList.toggle('rotate-180');
    });

    // Mobile menu toggle
    const sidebar = document.querySelector('.w-60');
    const menuToggle = document.getElementById('menuToggle');
    const menuIcon = menuToggle.querySelector('svg');

    menuToggle.addEventListener('click', () => {
        sidebar.classList.toggle('-translate-x-full');
        menuIcon.classList.toggle('rotate-180');
    });

    // Chart
    const ctx = document.getElementById('scholarshipChart').getContext('2d');
    const months = ['Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
    const data = [0, 0, 240, 320, 450, 320, 270, 200, 400];

    const chart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: months,
            datasets: [{
                label: 'Aplikasi Beasiswa',
                data: data,
                fill: false,
                borderColor: 'white',
                tension: 0.1,
                pointBackgroundColor: 'white',
                pointBorderColor: 'white',
                pointRadius: 6,
                pointHoverRadius: 8,
                pointBorderWidth: 2
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    grid: {
                        color: 'rgba(255, 255, 255, 0.1)',
                        borderDash: [5, 5]
                    },
                    ticks: {
                        color: 'white'
                    }
                },
                x: {
                    grid: {
                        display: false
                    },
                    ticks: {
                        color: 'white'
                    }
                }
            },
            plugins: {
                legend: {
                    display: false
                }
            }
        }
    });

    // Handle resize
    window.addEventListener('resize', () => {
        chart.resize();
    });
</script>
</body>
</html>