<div class="relative w-full h-32 bg-blue-900 flex items-center px-6">
  <h2 class="text-3xl md:text-4xl font-bold text-white">
    <%= scholarship.name %>
  </h2>
</div>

<div class="container mx-auto p-8 bg-white rounded-lg shadow-md">
  <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-4 mb-6">
    <div class="flex items-center">
      <svg
        class="w-6 h-6 mr-2 text-blue-500"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V16m-4-4h8m2-2c1.866 0 3.45.668 4.14 1.732a9 9 0 00-4.141-1.733m0 0v8m0-8c-1.866 0-3.45.668-4.14 1.732A9 9 0 018 8m4 8v4m-2 3c-1.11 0-2.08-.402-2.599-1M12 20h8m-8-4v4m2-3c1.11 0 2.08.402 2.599 1M8 16H6m-4-4h8m2-2c-1.11 0-2.08-.402-2.599-1M12 4V8m-4-2h8m2-2c1.11 0 2.08.402 2.599 1M8 4H6"
        ></path>
      </svg>
      <span>Biaya Pendidikan</span>
    </div>
    <div class="flex items-center">
      <span class="font-semibold text-lg"
        >Rp.<%= scholarship.nominal %> /Bulan</span
      >
    </div>
    <div class="flex items-center">
      <svg
        class="w-6 h-6 mr-2 text-blue-500"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
        ></path>
      </svg>
      <span>Durasi</span>
    </div>
    <div class="flex items-center">
      <span class="font-semibold text-lg">
        <%= scholarship.duration %> Tahun
      </span>
    </div>
    <div class="flex items-center">
      <svg
        class="w-6 h-6 mr-2 text-blue-500"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
        ></path>
      </svg>
      <span>Tanggal Berlaku</span>
    </div>
    <div class="flex items-center">
      <span class="font-semibold text-lg">
        <%= new Date(scholarship.created_at).toLocaleDateString("id-ID") %> -
        <%= new Date(scholarship.deadline).toLocaleDateString("id-ID") %>
      </span>
    </div>
    <div class="flex items-center">
      <svg
        class="w-6 h-6 mr-2 text-blue-500"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M7 7h.01M3 5a2 2 0 012-2h4l5.586 5.586a2 2 0 010 2.828l-6 6a2 2 0 01-2.828 0L3 13V5z"
        />
      </svg>
      <span>Tingkat</span>
    </div>
    <div class="flex items-center">
      <span class="font-semibold text-lg"
        ><%= scholarship.degree_requirement %></span
      >
    </div>
  </div>

  <p class="mb-4"><%= scholarship.description %></p>

  <h3 class="text-xl font-semibold mb-2">Persyaratan Umum:</h3>
  <ol class="list-decimal list-inside mb-4">
    <% scholarship.general_requirement.split(',').forEach(function(req) { %>
    <li><%= req.trim() %></li>
    <% }) %>
  </ol>

  <h3 class="text-xl font-semibold mb-2">Persyaratan Khusus:</h3>
  <ol class="list-decimal list-inside">
    <% scholarship.special_requirement.split(',').forEach(function(req) { %>
    <li><%= req.trim() %></li>
    <% }) %>
  </ol>

  <div class="flex justify-end">
    <a
      href="/portal/scholarship-form/<%= scholarship.id %>"
      class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
    >
      Daftar
    </a>
  </div>
</div>
